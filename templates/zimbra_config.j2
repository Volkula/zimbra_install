AVDOMAIN="{{ ansible_domain }}"
AVUSER="{{zimbra_admin_user | default('admin') }}@{{ ansible_domain}}"
CREATEADMIN="{{zimbra_admin_user | default('admin') }}@{{ ansible_domain }}"
CREATEADMINPASS="{{ zimbra_admin_password }}"
CREATEDOMAIN="{{ ansible_domain }}"
DOCREATEADMIN="yes"
DOCREATEDOMAIN="yes"
DOTRAINSA="yes"
EXPANDMENU="no"
HOSTNAME="{{ ansible_fqdn }}"
HTTPPORT="{{ HTTPPORT | default('8080')}}"
HTTPPROXY="{{ HTTPPROXY | default('true') }}"
HTTPPROXYPORT="{{ HTTPPROXYPORT | default('80') }}"
HTTPSPORT="{{ HTTPSPORT | default('8443') }}"
HTTPSPROXYPORT="{{HTTPSPROXYPORT | default('443') }}"
IMAPPORT="7143"
IMAPPROXYPORT="143"
IMAPSSLPORT="7993"
IMAPSSLPROXYPORT="993"
INSTALL_WEBAPPS="service zimlet zimbra zimbraAdmin"
JAVAHOME="/opt/zimbra/common/lib/jvm/java"
LDAPBESSEARCHSET="set"
LDAPHOST="{{ ansible_fqdn }}"
LDAPPORT="389"
LDAPREPLICATIONTYPE="master"
LDAPSERVERID="2"
MAILBOXDMEMORY="{{ zimbra_mailboxd_memory.stdout }}"
MAILPROXY="TRUE"
MODE="https"
MYSQLMEMORYPERCENT="30"
POPPORT="7110"
POPPROXYPORT="110"
POPSSLPORT="7995"
POPSSLPROXYPORT="995"
PROXYMODE="https"
REMOVE="no"
RUNARCHIVING="no"
RUNAV="yes"
RUNCBPOLICYD="no"
RUNDKIM="yes"
RUNSA="yes"
RUNVMHA="no"
SERVICEWEBAPP="yes"
SMTPDEST="{{zimbra_admin_user | default('admin') }}@{{ ansible_domain }}"
SMTPHOST="{{ ansible_fqdn }}"
SMTPNOTIFY="yes"
SMTPSOURCE="{{zimbra_admin_user | default('admin') }}@{{ ansible_domain }}"
SNMPNOTIFY="yes"
SNMPTRAPHOST="{{ ansible_fqdn }}"
SPELLURL="http://{{ ansible_fqdn }}:7780/aspell.php"
STARTSERVERS="yes"
STRICTSERVERNAMEENABLED="TRUE"
SYSTEMMEMORY="{{ zimbra_system_memory.stdout }}"
TRAINSAHAM="ham.{{ zimbra_random_chars_1.stdout }}@{{ ansible_domain }}"
TRAINSASPAM="spam.{{ zimbra_random_chars_1.stdout }}@{{ ansible_domain }}"
UIWEBAPPS="yes"
UPGRADE="yes"
USEEPHEMERALSTORE="no"
USESPELL="yes"
VERSIONUPDATECHECKS="TRUE"
VIRUSQUARANTINE="virus-quarantine.{{ zimbra_random_chars_1.stdout }}@{{ ansible_domain }}"
ZIMBRA_REQ_SECURITY="yes"
ldap_bes_searcher_password="{{ zimbra_random_chars_2.stdout }}"
ldap_dit_base_dn_config="cn=zimbra"
LDAPROOTPASS="{{ zimbra_random_chars_2.stdout }}"
LDAPADMINPASS="{{ zimbra_random_chars_2.stdout }}"
LDAPPOSTPASS="{{ zimbra_random_chars_2.stdout }}"
LDAPREPPASS="{{ zimbra_random_chars_2.stdout }}"
LDAPAMAVISPASS="{{ zimbra_random_chars_2.stdout }}"
ldap_nginx_password="{{ zimbra_random_chars_2.stdout }}"
mailboxd_directory="/opt/zimbra/mailboxd"
mailboxd_keystore="/opt/zimbra/mailboxd/etc/keystore"
mailboxd_keystore_password="{{ zimbra_random_chars_2.stdout }}"
mailboxd_server="jetty"
mailboxd_truststore="/opt/zimbra/common/lib/jvm/java/lib/security/cacerts"
mailboxd_truststore_password="changeit"
postfix_mail_owner="postfix"
postfix_setgid_group="postdrop"
ssl_default_digest="sha256"
zimbraFeatureBriefcasesEnabled="Enabled"
zimbraFeatureTasksEnabled="Enabled"
zimbraIPMode="ipv4"
zimbraMailProxy="TRUE"
{% if ansible_default_ipv4.address | ansible.utils.ipaddr('public') %}
zimbraMtaMyNetworks="127.0.0.0/8 [::1]/128"
{% else %}
zimbraMtaMyNetworks="127.0.0.0/8 [::1]/128 {{ (ansible_default_ipv4.address + '/' + ansible_default_ipv4.netmask) | ansible.utils.ipaddr('network/prefix') }}"
{% endif %}
zimbraPrefTimeZoneId="{{ zimbra_timezone }}"
zimbraReverseProxyLookupTarget="TRUE"
zimbraVersionCheckNotificationEmail="{{zimbra_admin_user | default('admin') }}@{{ ansible_domain }}"
zimbraVersionCheckNotificationEmailFrom="{{zimbra_admin_user | default('admin') }}@{{ ansible_domain }}"
zimbraVersionCheckSendNotifications="TRUE"
zimbraWebProxy="TRUE"
zimbra_ldap_userdn="uid=zimbra,cn=admins,cn=zimbra"
zimbra_require_interprocess_security="1"
INSTALL_PACKAGES="zimbra-core zimbra-ldap zimbra-logger zimbra-mta zimbra-snmp zimbra-store zimbra-apache zimbra-spell zimbra-memcached zimbra-proxy "
